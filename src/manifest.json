{
  "manifest_version": 2,
  "name": "Attention Monitor",
  "description": "See what websites you spend the most time on.",
  "version": "0.1.0",

  "background": {
    "scripts": ["js/background.js"]
  },

  "browser_action": {
  },

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["js/contentScript.js"]
  }],

  "icons": {
    "128": "img/logo-128.png"
  },

  "web_accessible_resources": [
  ],

  "permissions": [
    "storage",
    "notifications",
    "activeTab",
    "tabs"
  ],

  "content_security_policy": "script-src 'self'; object-src 'self'"
}
